@model Estate.Models.ApplicationUser

@{
    ViewData["Title"] = "تغییر مشخصات کاربر";
}

<div class=" container mt-c mw-500">
    <div class="card shadow border-0 mt-5">
        <div class="card-header bg-primary bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="py-2 text-white fs-4">@ViewData["Title"]</h1>
                    <h2 class="py-2 text-white fs-4">@Model.UserName</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">

                    <div class="my-3">
                        <button class="btn btn-outline-danger rounded-5 float-end">
                            <a asp-action="index" class="text-decoration-none text-dark">

                                <i class="bi bi-arrow-90deg-left"></i>
                                انصراف
                            </a></button>
                    </div>
                    <h4 style="text-align:center" class="my-3"> عکس پروفایل</h4>
                    @{
                        if (string.IsNullOrEmpty(@Model.profilePic) != true)
                        {
                            <img src="@Model.profilePic" style="width:100%" class="mb-3" />

                        }
                    }
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="profilePic" hidden />

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Please enter your name." />
                            <label asp-for="Name" class="form-label">نام</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Role" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="Role" class="form-label">سمت</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control" placeholder="Please choose your username." disabled/>
                            <label asp-for="UserName" class="form-label">شماره تماس</label>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Comment" class="form-control" placeholder="Please Enter your Description." rows="10" style="height:100%;"></textarea>
                            <label asp-for="Comment" class="form-label">توضیحات</label>
                        </div>

                        <div class="form-group form-check form-switch mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsAgent" /> @Html.DisplayNameFor(model => model.IsAgent)
                            </label>
                        </div>
                        <div class="form-group form-check form-switch mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="permisionDelete" /> @Html.DisplayNameFor(model => model.permisionDelete)
                            </label>
                        </div>

                        <hr />

                        <div class="form-group form-check form-switch mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="permisionEdit" /> @Html.DisplayNameFor(model => model.permisionEdit)
                            </label>
                        </div>

                        <hr />
                        <div class="form-group form-check form-switch mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="isRent" /> @Html.DisplayNameFor(model => model.isRent)
                            </label>
                        </div>

                        <hr />
                        <div class="form-group form-check form-switch mb-3">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="isOnlyRent" /> @Html.DisplayNameFor(model => model.isOnlyRent)
                            </label>
                        </div>

                        <hr />

                        <div class="form-floating mb-3">
                            <input asp-for="whatsApp" class="form-control" placeholder="Please enter your name." />
                            <label asp-for="whatsApp" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="telegram" class="form-control" placeholder="Please enter your name." />
                            <label asp-for="telegram" class="form-label"></label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="instagram" class="form-control" placeholder="Please enter your name." />
                            <label asp-for="instagram" class="form-label"></label>
                        </div>

                        <div class="mb-3 row">
                            <h4 style="text-align:center" class="my-3">محدوده فروش</h4>
                            <div class="col-6">

                                <input asp-for="minRange" class="form-control " placeholder="Please choose your username." />
                                <label asp-for="minRange" class="form-label">شروع رینج</label>


                            </div>
                            <div class="col-6">

                                <input asp-for="maxRange" class="form-control " placeholder="Please choose your username." />
                                <label asp-for="maxRange" class="form-label">پایان رینج</label>


                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="FeaturedMax" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="FeaturedMax" class="form-label"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="order" class="form-control" placeholder="Please choose your username." />
                            <label asp-for="order" class="form-label">ترتیب نمایش</label>
                        </div>
                        <div class="form-group">
                            <label asp-for="profilePic" class="control-label mb-3 text-primary"></label>
                            <input type="file" class="form-control" accept="capture=camera,image/*" id="upload" oninput="process()" />

                            <div>
                                <img id="output" />
                            </div>
                        </div>
                        <input type="hidden" name="base64Image" id="base64Image" />

                        

                            <div class="form-floating mb-3">
                            <select name="inRole" asp-items="ViewBag.RoleList" class="form-select">
                                   
                                </select>
                            </div>
                        
                        <div>
                            <button id="profile-submit" type="submit" class="w-100 btn btn-lg btn-primary">ثبت تغییرات</button>
                        </div>
                    </form>
                    <div class="my-3">
                        <button class="btn btn-outline-danger rounded-5 float-end">
                            <a asp-action="index" class="text-decoration-none text-dark">

                                <i class="bi bi-arrow-90deg-left"></i>
                                انصراف
                            </a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.tiny.cloud/1/xc1furjetoq69vi18jmr01fd433nexfd2fbg21ej7enz242s/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            language: 'fa'
        });
    </script>
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
