@{
    ViewData["Title"] = "تماس با ما";

    ViewData["Canonical"] = ViewBag.Canonical;

    ViewData["Description"] = "برای ارتباط با تیم حرفه‌ای املاک حمید، سوالات و درخواست‌های خود را از طریق فرم تماس با ما ارسال کنید. ما به سرعت پاسخگو خواهیم بود تا شما را در خرید، فروش و اجاره ملک یاری کنیم.";
    @section Styles
    {

        <style>
            .mask {
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 100%;
                overflow: hidden;
                background-attachment: fixed;
            }

            .bg-image {
                position: relative;
                overflow: hidden;
                background-repeat: no-repeat;
                background-size: cover;
                background-position: center center;
            }
        </style>

    }
}
<!-- Hero -->
<div class="p-5 text-center bg-image rounded-3" style="
    background-image: url('/images/home/hero_bg_3.jpg');
    height: 35vh;
  ">
    <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <h1 class="display-5 fw-bold fs-2 text-white">@ViewData["Title"]</h1>

            </div>
        </div>
    </div>
</div>
<div class=" container mw-500">
    <div class="card border-0">

        <div class="card-body p-4" data-aos="fade-up"
             data-aos-delay="100">
            <div class="row">
                <div class="col-md-12">
                    <div class="contact-info">
                        <div class="address mt-2">
                            <i class="bi bi-geo-alt-fill"></i>
                            <h4 class="mb-2">آدرس:</h4>
                            <p>
                                گیلان، رشت،بلوار معلم،<br />
                                میدان سرگل، خیابان علی تنها،<br />
                                نبش کوچه دهم، املاک حمید
                            </p>
                        </div>

                        <div class="open-hours mt-4">
                            <i class="bi bi-clock-fill"></i>
                            <h4 class="mb-2">ساعات اداری:</h4>
                            <p>
                                7 روز هفته<br />
                                9:00 صبح تا 11:00 شب
                            </p>
                        </div>

                        <div class="email mt-4">
                            <i class="bi bi-envelope-open-fill"></i>
                            <h4 class="mb-2">Email:</h4>
                            <p>info@hamid-estate.com</p>
                        </div>

                        <div class="phone mt-4">
                            <i class="bi bi-telephone-fill"></i>
                            <h4 class="mb-2">شماره تماس:</h4>
                            <p>09382051815 </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

